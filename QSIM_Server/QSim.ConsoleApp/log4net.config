<log4net>
  <root>
    <level value="ALL" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
    <appender-ref ref="errorfile" />
  </root>
  <appender name="console" type="log4net.Appender.ConsoleAppender">
    <threshold value="INFO" />
    <layout type="log4net.Layout.PatternLayout">
      <IgnoresException value="False" />
      <conversionPattern value="%d{ISO8601} %-5p %-10c{1}: %m%n" />
    </layout>
  </appender>
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <file type="log4net.Util.PatternString" value="Logs\QSim-Full-Log-%date{yyyyMMdd-HHmm}.log" />
    <threshold value="DEBUG" />
    <appendToFile value="false" />
    <datePattern value="yyyyMMdd-HH" />
    <maxSizeRollBackups value="5" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <IgnoresException value="False" />
      <conversionPattern value="%d{ISO8601} %-5p %-10c{1}: %m%n" />
    </layout>
  </appender>
  <appender>
    <appender name="errorfile" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="Logs\QSim-Error-Log-%date{yyyyMMdd-HH00}.log" />
      <threshold value="ERROR" />
      <appendToFile value="true" />
      <datePattern value="yyyyMMdd-HH" />
      <maxSizeRollBackups value="5" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <IgnoresException value="False" />
        <conversionPattern value="%d{ISO8601} %-5p %-10c{1}: %m%n" />
      </layout>
    </appender>
  </appender>
</log4net>